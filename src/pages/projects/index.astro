---
import "../../global.css";
import Layout from './layout.astro';

---
<Layout>
  <div class="flex flex-col items-center justify-start pt-30 gap-y-10 h-screen-dvh">
	
	<div class="absolute top-1/6 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 -z-10">
		<div class="blob w-full h-full rounded-full bg-primary/60 filter blur-3xl animate-blob"></div>
	</div>

	<img src="/portfolio/noise.png" alt="noise" class="absolute top-0 left-0 w-full h-full pointer-events-none opacity-10 mix-blend-multiply"/>

    <div class="flex flex-row items-center justify-center relative">
		
      <!-- Back Arrow -->
      <a class="animate-fade-down" style="animation-delay: 0s;" href="/portfolio/">
        <svg class="transition-transform duration-200 transform hover:scale-105 w-10 h-10 mr-400" width="68" height="46" viewBox="0 0 68 46" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M65 26C66.6569 26 68 24.6569 68 23C68 21.3431 66.6569 20 65 20V23V26ZM0.87868 20.8787C-0.292893 22.0503 -0.292893 23.9497 0.87868 25.1213L19.9706 44.2132C21.1421 45.3848 23.0416 45.3848 24.2132 44.2132C25.3848 43.0416 25.3848 41.1421 24.2132 39.9706L7.24264 23L24.2132 6.02944C25.3848 4.85786 25.3848 2.95837 24.2132 1.7868C23.0416 0.615224 21.1421 0.615224 19.9706 1.7868L0.87868 20.8787ZM65 23V20L3 20V23V26L65 26V23Z" fill="white"/>
        </svg>
      </a>

      <!-- Icon + Title -->
      <div class="flex flex-col absolute items-center justify-center gap-y-4 animate-fade-down" style="animation-delay: 0.1s;">
        <svg id="icon" class="w-16 h-16" width="268" height="200" viewBox="0 0 268 200" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 200V0H77.3968C104.504 0 125.349 10.0559 139.931 30.1676C152.644 47.8585 159 71.1359 159 100C159 133.147 150.774 158.659 134.323 176.536C119.928 192.179 100.952 200 77.3968 200H0ZM25.5185 177.374H72.91C113.291 177.374 133.481 151.583 133.481 100C133.481 48.4171 113.291 22.6257 72.91 22.6257H25.5185V177.374Z" fill="white"/>
          <path d="M202.764 22.6265V200H177.394V22.6265L83 22.6256C81.8954 22.6256 81 21.7302 81 20.6256V2.00001C81 0.895438 81.8954 4.51469e-06 83 1.00838e-05L268 0.000942832V22.6265H202.764Z" fill="white"/>
        </svg>
        <h1 class="text-xl font-medium text-text">
          projects
        </h1>
      </div>

    </div>

  </div>
</Layout>