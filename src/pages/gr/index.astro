---
import "../../global.css";
import Layout from "./layout.astro";
---

<Layout>
  <div class="flex flex-row justify-between items-center mx-80 h-screen-dvh">
    <div class="flex flex-col items-start justify-center h gap-y-12">
      <!-- Background (optional) -->
      <!--
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 -z-10">
        <div class="blob w-full h-full rounded-full bg-primary/50 filter blur-3xl animate-blob"></div>
      </div>
      <img src="/portfolio/noise.png" alt="noise" class="absolute top-0 left-0 w-full h-full pointer-events-none opacity-10 mix-blend-multiply"/>
      -->

      <!-- Icon + Links Group -->
      <div
        class="flex flex-col items-start justify-center gap-8 animate-fade-down text-center"
        style="animation-delay: 0s;"
      >
        <!-- Icon -->
        <svg
          id="icon"
          class="w-50 h-auto text-white"
          width="268"
          height="200"
          viewBox="0 0 268 200"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M0 200V0H77.3968C104.504 0 125.349 10.0559 139.931 30.1676C152.644 47.8585 159 71.1359 159 100C159 133.147 150.774 158.659 134.323 176.536C119.928 192.179 100.952 200 77.3968 200H0ZM25.5185 177.374H72.91C113.291 177.374 133.481 151.583 133.481 100C133.481 48.4171 113.291 22.6257 72.91 22.6257H25.5185V177.374Z"
            fill="currentColor"></path>
          <path
            d="M202.764 22.6265V200H177.394V22.6265L83 22.6256C81.8954 22.6256 81 21.7302 81 20.6256V2.00001C81 0.895438 81.8954 4.51469e-06 83 1.00838e-05L268 0.000942832V22.6265H202.764Z"
            fill="currentColor"></path>
        </svg>

        <!-- Links -->
        <div
          class="flex flex-wrap justify-center gap-12 text-xl font-regular text-text"
        >
          <a
            class="flex flex-row items-center gap-2 text-lg transition-transform duration-200 transform hover:scale-105 hover:text-text/80"
            href="/portfolio/gr/skills/"
          >
            <svg
              width="12"
              height="12"
              viewBox="0 0 12 12"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M0.270363 10.4242C-0.090121 10.7847 -0.090121 11.3692 0.270363 11.7297C0.630847 12.0901 1.2153 12.0901 1.57579 11.7297L0.923077 11.0769L0.270363 10.4242ZM12 0.923079C12 0.413276 11.5867 2.33428e-07 11.0769 0L2.76923 7.3919e-07C2.25943 4.27951e-07 1.84615 0.413277 1.84615 0.923079C1.84615 1.43288 2.25943 1.84616 2.76923 1.84616H10.1538V9.23079C10.1538 9.7406 10.5671 10.1539 11.0769 10.1539C11.5867 10.1539 12 9.7406 12 9.23079V0.923079ZM0.923077 11.0769L1.57579 11.7297L11.7296 1.5758L11.0769 0.923079L10.4242 0.270364L0.270363 10.4242L0.923077 11.0769Z"
                fill="currentColor"></path>
            </svg>
            δεξιότητες
          </a>
          <a
            class="flex flex-row items-center gap-2 text-lg transition-transform duration-200 transform hover:scale-105 hover:text-text/80"
            href="/portfolio/gr/projects/"
          >
            <svg
              width="12"
              height="12"
              viewBox="0 0 12 12"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M0.270363 10.4242C-0.090121 10.7847 -0.090121 11.3692 0.270363 11.7297C0.630847 12.0901 1.2153 12.0901 1.57579 11.7297L0.923077 11.0769L0.270363 10.4242ZM12 0.923079C12 0.413276 11.5867 2.33428e-07 11.0769 0L2.76923 7.3919e-07C2.25943 4.27951e-07 1.84615 0.413277 1.84615 0.923079C1.84615 1.43288 2.25943 1.84616 2.76923 1.84616H10.1538V9.23079C10.1538 9.7406 10.5671 10.1539 11.0769 10.1539C11.5867 10.1539 12 9.7406 12 9.23079V0.923079ZM0.923077 11.0769L1.57579 11.7297L11.7296 1.5758L11.0769 0.923079L10.4242 0.270364L0.270363 10.4242L0.923077 11.0769Z"
                fill="currentColor"></path>
            </svg>
            πρότζεκτς
          </a>
          <a
            class="flex flex-row items-center gap-2 text-lg transition-transform duration-200 transform hover:scale-105 hover:text-text/80"
            href="/portfolio/gr/about_me/"
          >
            <svg
              width="12"
              height="12"
              viewBox="0 0 12 12"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M0.270363 10.4242C-0.090121 10.7847 -0.090121 11.3692 0.270363 11.7297C0.630847 12.0901 1.2153 12.0901 1.57579 11.7297L0.923077 11.0769L0.270363 10.4242ZM12 0.923079C12 0.413276 11.5867 2.33428e-07 11.0769 0L2.76923 7.3919e-07C2.25943 4.27951e-07 1.84615 0.413277 1.84615 0.923079C1.84615 1.43288 2.25943 1.84616 2.76923 1.84616H10.1538V9.23079C10.1538 9.7406 10.5671 10.1539 11.0769 10.1539C11.5867 10.1539 12 9.7406 12 9.23079V0.923079ZM0.923077 11.0769L1.57579 11.7297L11.7296 1.5758L11.0769 0.923079L10.4242 0.270364L0.270363 10.4242L0.923077 11.0769Z"
                fill="currentColor"></path>
            </svg>
            σχετικά με μένα
          </a>
          <a
            class="flex flex-row items-center gap-2 text-lg transition-transform duration-200 transform hover:scale-105 hover:text-text/80"
            href="/portfolio/gr/contact/"
          >
            <svg
              width="12"
              height="12"
              viewBox="0 0 12 12"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M0.270363 10.4242C-0.090121 10.7847 -0.090121 11.3692 0.270363 11.7297C0.630847 12.0901 1.2153 12.0901 1.57579 11.7297L0.923077 11.0769L0.270363 10.4242ZM12 0.923079C12 0.413276 11.5867 2.33428e-07 11.0769 0L2.76923 7.3919e-07C2.25943 4.27951e-07 1.84615 0.413277 1.84615 0.923079C1.84615 1.43288 2.25943 1.84616 2.76923 1.84616H10.1538V9.23079C10.1538 9.7406 10.5671 10.1539 11.0769 10.1539C11.5867 10.1539 12 9.7406 12 9.23079V0.923079ZM0.923077 11.0769L1.57579 11.7297L11.7296 1.5758L11.0769 0.923079L10.4242 0.270364L0.270363 10.4242L0.923077 11.0769Z"
                fill="currentColor"></path>
            </svg>
            επικοινωνία
          </a>
        </div>
      </div>

      <!-- CV Button Block -->
      <div class="animate-fade-down" style="animation-delay: 0.2s;">
        <a
          href="/portfolio/CV.pdf"
          download="CV.pdf"
          class="group flex flex-row items-center justify-center bg-text text-background px-12 py-3 rounded-4xl hover:bg-background hover:text-text transition cursor-pointer gap-5 overflow-hidden relative text-xl"
        >
          Κατεβάστε το βιογραφικό μου
          <svg
            width="18"
            height="20"
            viewBox="0 0 16 18"
            fill="currentColor"
            class="icon-arrow"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M9 1.22192C9 0.669639 8.55228 0.221924 8 0.221924C7.44772 0.221924 7 0.669639 7 1.22192L8 1.22192L9 1.22192ZM7.29289 17.4854C7.68342 17.8759 8.31658 17.8759 8.70711 17.4854L15.0711 11.1214C15.4616 10.7309 15.4616 10.0977 15.0711 9.70721C14.6805 9.31668 14.0474 9.31668 13.6569 9.70721L8 15.3641L2.34315 9.70721C1.95262 9.31668 1.31946 9.31668 0.928932 9.70721C0.538407 10.0977 0.538407 10.7309 0.928932 11.1214L7.29289 17.4854ZM8 1.22192L7 1.22192L7 16.7783L8 16.7783L9 16.7783L9 1.22192L8 1.22192Z"
            ></path>
          </svg>
        </a>
      </div>
    </div>

    <div class="animate-fade-down" style="animation-delay: 0.2s;">
      <a
        href="/portfolio/en/"
        class="group flex flex-row items-center justify-center bg-text text-background px-6 py-3 rounded-4xl hover:bg-background hover:text-text transition cursor-pointer gap-3 overflow-hidden relative text-xl"
      >
        EN
        <svg
          width="16"
          height="16"
          viewBox="0 0 20 20"
          fill="currentColor"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M0.462463 17.3045C-0.154155 17.9212 -0.154155 18.921 0.462463 19.5376C1.07908 20.1541 2.07881 20.1541 2.69543 19.5376L1.57895 18.4211L0.462463 17.3045ZM20 1.57895C20 0.706917 19.2931 0 18.4211 0H4.21053C3.3385 0 2.63158 0.706917 2.63158 1.57895C2.63158 2.45098 3.3385 3.1579 4.21053 3.1579H16.8421V15.7895C16.8421 16.6615 17.5491 17.3684 18.4211 17.3684C19.2931 17.3684 20 16.6615 20 15.7895V1.57895ZM1.57895 18.4211L2.69543 19.5376L19.5376 2.69544L18.4211 1.57895L17.3045 0.462464L0.462463 17.3045L1.57895 18.4211Z"
            fill="currentColor"></path>
        </svg>
      </a>
    </div>

    <script>
      const arrow = document.querySelector(".icon-arrow") as HTMLElement | null;
      const link = document.querySelector(".group") as HTMLElement | null;

      if (link && arrow) {
        link.addEventListener("mouseenter", () => {
          arrow.style.animation = "arrowDownUp 0.5s forwards";
        });

        link.addEventListener("mouseleave", () => {
          arrow.style.animation = "arrowUpDown 0.5s forwards";
        });
      }
    </script>
  </div>
</Layout>
