---
import "../../../global.css";
import Layout from "./layout.astro";
import Icon from "../../../icons/icon.astro";
import NameIcon from "../../../icons/nameIcon.astro";
import LocationIcon from "../../../icons/locationIcon.astro";
import LangSwitchEn from "../../../components/langSwitchEn.astro";
---

<Layout>
  <div class="flex flex-col items-start justify-start px-80 py-40 h-screen-dvh">
    <div class="flex flex-col items-start justify-center gap-y-20">
      <div class="flex flex-col gap-y-6">
        <a class="animate-fade-down" style="animation-delay: 0.0s;" href="/en/">
          <Icon class="w-40 h-auto" />
        </a>

        <h1
          class="text-2xl font-medium text-text animate-fade-down"
          style="animation-delay: 0.1s;"
        >
          about me
        </h1>
      </div>

      <div class="flex flex-col gap-y-6">
        <a
          class="flex flex-row items-center gap-2 text-lg text-text animate-fade-down"
          style="animation-delay: 0.0s;"
        >
          <NameIcon />
          Dimitris Terzidis
        </a>
        <a
          class="flex flex-row items-center gap-2 text-lg text-text animate-fade-down"
          style="animation-delay: 0.0s;"
        >
          <LocationIcon />
          Thessaloniki, Greece
        </a>
      </div>

      <LangSwitchEn href="/gr/about_me/" />
    </div>
  </div>
</Layout>
