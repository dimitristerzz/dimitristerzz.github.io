---
import "../global.css";
import Layout from './layout.astro';
---

<Layout>
  <div class="flex flex-col items-center justify-center min-h-screen px-4 sm:px-8 md:px-12 gap-y-12">

    <!-- Background (optional) -->
    <!--
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 -z-10">
      <div class="blob w-full h-full rounded-full bg-primary/50 filter blur-3xl animate-blob"></div>
    </div>
    <img src="/portfolio/noise.png" alt="noise" class="absolute top-0 left-0 w-full h-full pointer-events-none opacity-10 mix-blend-multiply"/>
    -->

    <!-- Icon + Links Group -->
    <div class="flex flex-col items-center justify-center gap-8 animate-fade-down text-center" style="animation-delay: 0s;">

      <!-- Icon -->
      <svg id="icon" class="w-20 h-20 text-white transition-colors duration-200 shrink-0" width="268" height="200" viewBox="0 0 268 200" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 200V0H77.3968C104.504 0 125.349 10.0559 139.931 30.1676C152.644 47.8585 159 71.1359 159 100C159 133.147 150.774 158.659 134.323 176.536C119.928 192.179 100.952 200 77.3968 200H0ZM25.5185 177.374H72.91C113.291 177.374 133.481 151.583 133.481 100C133.481 48.4171 113.291 22.6257 72.91 22.6257H25.5185V177.374Z" fill="currentColor"/>
