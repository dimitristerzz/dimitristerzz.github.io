---
import Tailwindcss from "../assets/tailwindcss.astro";
import Kotlin from "../assets/kotlin.astro";
import Astr from "../assets/astr.astro";
---

<div class="flex flex-col gap-6">
  <a
    class="flex flex-row items-center gap-2 text-lg transition-transform duration-200 transform hover:scale-105 text-text hover:text-text/80 animate"
    style="animation-delay: 0.0s;"
    href="https://tailwindcss.com/"
    target="_blank"
    rel="noopener noreferrer"
  >
    <Tailwindcss class="size-5" />
    TailwindCSS
  </a>
  <a
    class="flex flex-row items-center gap-2 text-lg transition-transform duration-200 transform hover:scale-105 text-text hover:text-text/80 animate"
    style="animation-delay: 0.0s;"
    href="https://kotlinlang.org/"
    target="_blank"
    rel="noopener noreferrer"
  >
    <Kotlin class="size-5" />
    Kotlin
  </a>
  <a
    class="flex flex-row items-center gap-2 text-lg transition-transform duration-200 transform hover:scale-105 text-text hover:text-text/80 animate"
    style="animation-delay: 0.0s;"
    href="https://astro.build/"
    target="_blank"
    rel="noopener noreferrer"
  >
    <Astr class="size-5" />
    Astro
  </a>
</div>
