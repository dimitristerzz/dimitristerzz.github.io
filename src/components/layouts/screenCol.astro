---
import Icon from "../../components/assets/icon.astro";

const { lang, title } = Astro.props;

const labels = {
  skills: {
    en: "skills",
    el: "δεξιότητες",
  },
  projects: {
    en: "projects",
    el: "πρότζεκτς",
  },
  about_me: {
    en: "about me",
    el: "σχετικά με μένα",
  },
  contact: {
    en: "contact",
    el: "επικοινωνία",
  },
};
---

<div
  class="flex flex-col items-start justify-start mx-80 my-40 h-screen-dvh w-screen-dvw"
>
  <div class="flex flex-col items-start justify-center gap-20">
    <div class="flex flex-col gap-6">
      <a
        class="animate-fade-down"
        style="animation-delay: 0.0s;"
        href={`/${lang}/`}
      >
        <Icon class="w-40 h-auto" />
      </a>
      <p
        class="text-2xl font-medium text-text animate-fade-down"
        style="animation-delay: 0.1s;"
      >
        {labels[title][lang]}
      </p>
    </div>

    <slot />
  </div>
</div>
