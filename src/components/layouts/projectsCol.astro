---
import Aoc from "../assets/aoc.astro";
import Arrow from "../assets/arrow.astro";
import Beatly from "../assets/beatly.astro";
import DtUtils from "../assets/dt-utils.astro";
import Gitendar from "../assets/gitendar.astro";
---

<div class="flex flex-col gap-6">
  <a
    class="flex flex-row items-center gap-2 text-lg transition-transform duration-200 transform hover:scale-105 text-text hover:text-text/80 animate"
    style="animation-delay: 0.0s;"
    href="https://groooveshare.com/"
    target="_blank"
    rel="noopener noreferrer"
  >
    <Beatly class="size-5"/>
    Beatly
  </a>
  <a
    class="flex flex-row items-center gap-2 text-lg transition-transform duration-200 transform hover:scale-105 text-text hover:text-text/80 animate"
    style="animation-delay: 0.0s;"
    href="https://dimitristerzz.github.io/dtutils/"
    target="_blank"
    rel="noopener noreferrer"
  >
    <DtUtils class="size-5"/>
    dt-utils
  </a>
  <a
    class="flex flex-row items-center gap-2 text-lg transition-transform duration-200 transform hover:scale-105 text-text hover:text-text/80 animate"
    style="animation-delay: 0.0s;"
    href="https://dimitristerzz.github.io/Gitendar/"
    target="_blank"
    rel="noopener noreferrer"
  >
    <Gitendar class="size-5"/>
    Gitendar
  </a>
  <a
    class="flex flex-row items-center gap-2 text-lg transition-transform duration-200 transform hover:scale-105 text-text hover:text-text/80 animate"
    style="animation-delay: 0.0s;"
    href="https://dimitristerzz.github.io/aoc/"
    target="_blank"
    rel="noopener noreferrer"
  >
    <Aoc class="size-5"/>
    AoC
  </a>
</div>
